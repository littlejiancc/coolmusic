<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/music_back"
    android:orientation="vertical"
    tools:context="com.example.wangxiaojian.mediaplayer.MainActivity">
  <android.support.v7.widget.Toolbar
      android:id="@+id/id_toolbar"
      app:title="我的音乐播放器"
      app:navigationIcon="@mipmap/music"
      app:titleTextColor="#FFFFFF"
      android:layout_height="wrap_content"
      android:minHeight="?attr/actionBarSize"
      android:layout_width="match_parent"
      android:background="#4f5555"/>
  <RelativeLayout
      android:id="@+id/bottom"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true">

    <ImageView
        android:id="@+id/image_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/music"/>
    <TextView
        android:id="@+id/text_music"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/image_music"/>
    <ImageButton
        android:id="@+id/btn_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/pause"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/text_music"/>
    <ImageButton
        android:id="@+id/btn_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/play"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/btn_pause"/>
    <ImageButton
        android:id="@+id/btn_pre"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/previous"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/btn_play"/>
    <ImageButton
        android:id="@+id/btn_stop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/stop"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/btn_pre"/>
    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/next"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/btn_stop"/>
  </RelativeLayout>
  <ListView
      android:id="@+id/music_listview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:listSelector="#320000FF"
      android:layout_above="@id/bottom"
      android:layout_below="@id/id_toolbar"/>
</RelativeLayout>
